#!/usr/bin/env php
<?php

$autoload = false;

foreach (array(
    __DIR__ . '/../../../autoload.php', // from installed vendor path
    __DIR__ . '/../vendor/autoload.php', // from cloned respository
) as $file) {
    if (file_exists($file)) {
        $autoload = true;
        require $file;
        break;
    }
}

if (false === $autoload) {
    fwrite(
        STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'wget http://getcomposer.org/composer.phar' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    exit(1);
}

unset($autoload, $file);

use Burntromi\ExceptionGenerator\Cli\Console\Application;

$console = new Application('Burntromi Exception-Generator', '1.0-dev');
$console->run();
